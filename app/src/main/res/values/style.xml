<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="settings_tile_margin">22dp</dimen>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
        <item name="android:dialogCornerRadius">20dp</item>
        <item name="android:colorBackground">@color/surface</item>
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:borderlessButtonStyle">@style/MyBorderlessButton</item>
        <item name="android:buttonBarStyle">@style/MyBorderlessButton</item>
    </style>

    <style name="MyBorderlessButton" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/primary</item>
        <item name="android:color">@color/primary</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/button_tint</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

<!--    <style name="ActionMenuTransparentColor" parent="@android:style/TextAppearance.Widget.IconMenu.Item">-->
<!--        <item name="android:textColor">@color/transparent</item>-->
<!--    </style>-->


    <style name="SettingsTitle">
        <item name="android:paddingStart">@dimen/border_margin</item>
        <item name="android:paddingTop">@dimen/border_margin</item>
        <item name="android:paddingEnd">@dimen/border_margin</item>
        <item name="android:paddingBottom">@dimen/border_margin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsTile">
        <item name="android:paddingStart">@dimen/border_margin</item>
        <item name="android:paddingEnd">@dimen/border_margin</item>
        <item name="android:paddingBottom">@dimen/border_margin</item>
    </style>

    <style name="SettingsSelectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="SettingsSelectionValue">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.6</item>
    </style>

</resources>